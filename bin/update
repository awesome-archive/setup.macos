#!/bin/sh
# vim: set ft=sh :

set -eu

brew upgrade
brew cleanup

vagrant plugin update
anyenv update

git -C "${HOME}/.config/anyenv/anyenv-install" pull
git -C "${ZDOTDIR:-$HOME}/.zprezto" pull

function install_nodejs() {
  LATEST=$(nodenv install -l | grep -e "^${1}\." | tail -n 1 | xargs)
  nodenv install -s "${LATEST}"
  nodenv global "${LATEST}"
  # https://qiita.com/Qoo_Rus/items/afb52517e0e17b720990
  npm install -g --silent agentkeepalive@latest
  npm install -g --silent npm@${2}
  npm install -g --silent yarn@latest
  npm upgrade -g --silent
}
install_nodejs 12 6
install_nodejs 14 6
install_nodejs 16 7
